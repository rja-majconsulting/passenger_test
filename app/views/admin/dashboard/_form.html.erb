<%= form_tag admin_root_path, :method => 'get' , :class => 'form-inline'  do  %>
    <div class="field form-group">
      <%= text_field_tag :name, params[:name], :placeholder => t('dashboard_search_name'), :class => "form-control" %>
    </div>
    <div class="field form-group">
      <%= text_field_tag :firstName, params[:firstName], :placeholder => t('dashboard_search_firstname'), :class => "form-control" %>
    </div>
    <div class="form-group">
      <button type="submit" class="btn btn-primary col-sm-offset-3"><%= t('button_search') %></button>
    </div>

<% end %>


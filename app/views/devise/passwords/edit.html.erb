<div class="content">
  <h1><%= t('connexion_change_password_title') %></h1>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, :class=> 'form-horizontal' }) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field form-group">
      <%= f.label t('connexion_password'), :class => 'col-sm-3 control-label' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em><br />
      <% end %>
      <div class="col-sm-6">
        <%= f.password_field :password, autofocus: true, autocomplete: "off" , :class => 'form-control' %>
      </div>
    </div>

    <div class="field form-group">
      <%= f.label t('connexion_password_confirmation'), :class => 'col-sm-3 control-label' %>
      <div class="col-sm-6">
        <%= f.password_field :password_confirmation, autocomplete: "off" , :class => 'form-control' %>
      </div>
    </div>

    <div class="actions form-group">
      <%= f.submit t('button_edit') , :class => 'btn btn-primary col-sm-offset-3' %>
    </div>
  <% end %>

  <div class='col-sm-offset-3'>
    <%= render "devise/shared/links" %>
  </div>
</div>
